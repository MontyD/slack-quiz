extends layout

block content
  h1 
    a(href='/')= title
  #landing.container
    .start
      h2 A stack quiz for idiots
      hr
      button#initviewstats.threebuttons View Stats
      button#initnewquestion.threebuttons New Question
      button#initnewsaying.threebuttons New Saying
    .newquestion
      h2 New Question
      #backhome
        i.fi-home
      form#Question(action='./newQuestion', method='post')
        label(for='question') Question
        input#question.u-full-width(type='text', name='question', required=true)
        label(for='answer') Answer
        input#answer.u-full-width(type='text', name='answer', required=true)
        label(for='option1') Fake answer one (for multiple choice)
        input#option1.u-full-width(type='text', name='option1', required=true)
        label(for='option2') Fake answer two
        input#option2.u-full-width(type='text', name='option2', required=true)
        label(for='option3') Fake answer three
        input#option3.u-full-width(type='text', name='option3', required=true)
        label(for='hint') Hint
        input#hint.u-full-width(type='text', name='hint', required=true)
        input#submit(type='submit', value='Submit')
      form#tryQuestion(action='./demoQuestion', method='post')
        hr
        h3 Try your question out...
        #demoresponse
        input#demoanswer(type='text', name='demoanswer' placeholder='Type here...')
        input#demoid.hidden(type='text', name='_id', readonly='') 
